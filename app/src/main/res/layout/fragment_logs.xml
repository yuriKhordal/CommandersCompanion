<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LogsFragment"
    android:id="@+id/notes_tbl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DCDCDC"
    android:shrinkColumns="1"
    android:stretchColumns="1,2">

    <TableRow
        android:id="@+id/unit_test_row_soldier"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/table_cell"
            android:text="8498975"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="none" />

        <TextView
            android:id="@+id/test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@drawable/table_cell"
            android:text="יורי חורדל"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="none" />

        <TextView
            android:id="@+id/test_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@drawable/table_cell"
            android:text='סמ"ר'
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="none" />

        <ImageButton
            android:id="@+id/test_remove_soldier"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="@drawable/button_pressed"
            android:contentDescription="remove"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:srcCompat="@drawable/ic_remove_black_24dp" />
    </TableRow>

    <TableRow
        android:id="@+id/unit_test_row_notes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/table_cell"
            android:text="להחזיר בלאי"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="none" />

        <TextView
            android:id="@+id/test_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@drawable/table_cell"
            android:lines="1"
            android:text="אלורידי - מימיה"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="none" />

        <ImageButton
            android:id="@+id/test_remove_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="@drawable/button_pressed"
            android:contentDescription="remove"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:srcCompat="@drawable/ic_remove_black_24dp" />

    </TableRow>

    <TableRow
        android:id="@+id/unit_test_row_logs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@drawable/table_cell"
            android:text="2020/05/09 12:36"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="none" />

        <ImageButton
            android:id="@+id/test_remove_log"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="@drawable/button_pressed"
            android:contentDescription="remove"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:srcCompat="@drawable/ic_remove_black_24dp" />
    </TableRow>

</TableLayout>